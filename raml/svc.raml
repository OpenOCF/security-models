#%RAML 0.8
title: OIC Security Services Resource
version: v1.0-20150819
schemas:
  - Svc: !include oic.sec.svc.json

traits:
  - interface:
      queryParameters:
        if:
            enum: ["oic.if.baseline"]

/oic/sec/svc:
  description: |
    This resource specifies the services this device recognizes.

  displayName: Services Resource data
  is: [ interface ]

  get:
    description: |
      Retrieves the services resource data.
    responses:
      200:
        body:
          application/json:
            schema: svc
            example: |
              {
              "rt": "oic.sec.svc",
              "svcid": "de305d54-75b4-431b-adb2-eb6b9e546014",
              "sct":  13,
              "scid":  1,
              "ccid":  2,
              "crms": 32,#this should be discussed about the supported data type in spec
              "rowner": ["oic.sec.svc.bss"] 
              }
      400:
        description: The request is invalid.

  post:
    description: |
      Updates a services resource entry
    body:
      application/json:
        schema: svc
        example: |
           {
              "rt": "oic.sec.svc",
              "svcid": "de305d54-75b4-431b-adb2-eb6b9e546014",
              "sct":  13,
              "scid":  1,
              "ccid":  2,
              "crms": 32,#this should be discussed about the supported data type in spec
              "rowner": ["oic.sec.svc.bss"] 
          }
    responses:
      201:
        description: The PSTAT entry is created.
      204:
        description: The PSTAT entry is updated.
      400:
        description: The request is invalid.

  put:
    description: |
      Creates a new services resource entry
    body:
      application/json:
        schema: svc
        example: |
          {
              "rt": "oic.sec.svc",
              "svcid": "de305d54-75b4-431b-adb2-eb6b9e546014",
              "sct":  13,
              "scid":  1,
              "ccid":  2,
              "crms": 32,#this should be discussed about the supported data type in spec
              "rowner": ["oic.sec.svc.bss"] 
          }
    responses:
      201:
        description: The PSTAT entry is created.
      400:
        description: The request is invalid.

  delete:
    description: |
      Deletes the SVC data.
      When DELETE is used without query parameters, the entire collection is deleted.
      When DELETE is used with the query parameter where "svcid" is specified, only the matched entry is deleted.
    queryParameters:
        subject:
            type: string
            description: |
              Delete the PSTAT identified by the string containing the UUID.
            required: false
            example: |
              DELETE /oic/sec/svc?svcid="de305d54-75b4-431b-adb2-eb6b9e546014"
    responses:
      200:
        description: The SVC instance or the the entire resource has been successfully deleted.
      400:
        description: The request is invalid.
