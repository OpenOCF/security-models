{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://www.openconnectivity.org/ocf-apis/security/schemas/oic.sec.didtype.json#",
  "title": "Device Identifier Format type",
  "definitions": {
    "oic.sec.didtype": {
      "oneOf": [
        {
          "type": "object",
          "description": "Device identifier",
          "properties": {
            "uuid": {
              "description": "A UUID Device ID",
              "$ref": "../../core/schemas/oic.types-schema.json#/definitions/uuid"
            }
          },
          "required": ["uuid"]
        }
      ]
    },
    "oic.sec.host": {
      "type": "object",
      "description": "Identifier format used to denote resource owners",
      "properties": {
        "hostid": {
          "type": "object",
          "$ref": "#/definitions/oic.sec.didtype"
        }
      },
      "required": ["hostid"]
    }
  }
}
